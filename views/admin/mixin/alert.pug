mixin alert-success(time)
  - if (messages.success)
    div(
      class="alert alert-success show-alert"
      show-alert="3000"
    ) #{messages.success}

mixin alert-error(time)
  - if (messages.error)
    div(
      class="alert alert-danger show-alert"
      show-alert="3000"
    ) #{messages.error}