              )
        tr(data-nametr="products_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id
                data-name="products_edit"
              )
        tr(data-nametr="products_delete")
          td Xóa
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id
                data-name="products_delete"
              )

        tr
          td(colspan="4")
            b Nhóm quyền
        tr(data-nametr="roles_view")
